<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/heroLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:padding="24dp"
    tools:context=".HomeActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_2"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOTEX - भारत की आवाज़"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E3A8A"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Kavita!"
        android:textSize="18sp"
        android:textColor="#37474F"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Voting Illustration -->
    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="260dp"
        android:layout_height="220dp"
        android:src="@drawable/img_1"
        android:contentDescription="Voting Illustration"
        app:layout_constraintTop_toBottomOf="@id/welcomeMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Purpose Text -->
    <TextView
        android:id="@+id/purposeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empowering every Indian citizen with digital voting. Cast your vote. Make it count!"
        android:textColor="#424242"
        android:textAlignment="center"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/heroImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Vote Now Button -->
    <Button
        android:id="@+id/voteNowButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🗳️ Vote Now"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1E88E5"
        android:elevation="4dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/purposeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Know More Button -->
    <Button
        android:id="@+id/knowMoreButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ℹ️ Know More"
        android:textSize="16sp"
        android:textColor="#1E88E5"
        android:background="@drawable/outline_button_bh"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/voteNowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
