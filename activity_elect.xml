<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ElectActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Candidate Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/partySymbol1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_3" />

                        <TextView
                            android:id="@+id/candidateName1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Kavita Deshmukh"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:background="#66000000" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/voteButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vote To BJP"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#008577"
                        android:layout_margin="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Repeat 3 More Cards for Other Candidates -->
            <!-- Candidate Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/partySymbol2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_4" />

                        <TextView
                            android:id="@+id/candidateName2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Rajeev Kumar"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:background="#66000000" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/voteButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vote To Congress"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#008577"
                        android:layout_margin="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/partySymbol3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_5" />

                        <TextView
                            android:id="@+id/candidateName3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Rajeev Kumar"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:background="#66000000" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/voteButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vote To Aam Aadami"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#008577"
                        android:layout_margin="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- You can copy/paste and customize for candidate 3 & 4 -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
